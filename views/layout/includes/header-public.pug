                    form(action="/auth/cerrar-sesion" method="POST")
                        input(type="hidden" name="_csrf" value= csrfToken) 
                        input(type="submit" class="md:bg-zinc-800 p-2 rounded cursor-pointer hover:text-red-500" value="Cerrar Sesion") 
            else
                nav(class=" space-y-5 md:space-y-0 text-sm flex items-center font-bold text-zinc-50 md:gap-3 flex-col md:flex-row " )
