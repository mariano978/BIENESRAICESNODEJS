
header(class=" bg-zinc-900 transition-all")
    div(class="md:container md:mx-auto flex md:flex-row flex-col md:justify-between justify-center items-center")

        div(class="flex flex-row items-center justify-between w-[90%] m-auto py-5")
            a(href="/")
                h1.text-2xl.text-zinc-50.font-extrabold.text-center Bienes
                    span.font-normal Raices

            if usuario 
                p(class=" font-semibold md:hidden text-zinc-50 block")= `Hola, ${usuario.nombre}`

            div(class="flex items-center gap-5 md:hidden text-zinc-50")
                <i id="lupa" class="fa-solid fa-magnifying-glass cursor-pointer"></i>
                <i id="botonBurguer" class="fa-solid fa-bars cursor-pointer"></i>    

        form(action="/find" method="POST" id="busquedaHeader" class=" hidden pb-3")
            input(type="hidden" name="_csrf" value= csrfToken)
            input(type="text" id="termino" class=" rounded-sm px-3 py-1 text-zinc-700" name="termino" placeholder="Busca una propiedad...") 

