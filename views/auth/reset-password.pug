extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center.text-zinc-800 Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold.text-zinc-800= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.backdrop-blur-md.text-zinc-800.uppercase.text-xs.text-center.p-2.mb-3.font-bold.rounded-md(class="bg-red-600/70")= error.msg

        .mt-8.mx-auto.max-w-md.rounded-lg(class="bg-white")
            .py-8.px-4.rounded-md
                form(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-2
                        label.text-center.block.text-sm.text-zinc-800.mb-2.font-bold(for="password") Ingrese su nuevo password
                        input#password.shadow-highlight.w-full.px-3.py-1.border.rounded.border-none.placeholder-gray-700.text-zinc-800(class="bg-zinc-100" placeholder="Nuevo password" type="password" name="password")
                        input(class="w-full mt-6 bg-green-300 hover:bg-green-400 font-bold py-1.5 cursor-pointer rounded-sm" type="submit" value="Enviar")

                