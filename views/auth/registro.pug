extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center.text-zinc-50 Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold.text-zinc-50= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.backdrop-blur-md.text-zinc-50.uppercase.text-xs.text-center.p-2.mb-3.font-bold.rounded-md(class="bg-red-600/70")= error.msg

        .mt-8.mx-auto.max-w-md.rounded-lg.backdrop-blur-md(class="bg-gray-800/30")
            .py-8.px-4.rounded-md.border.border-gray-600.backdrop-blur-sm
                form(method="POST" action="/auth/registro")
                    div.mb-2
                        label.text-center.block.text-sm.text-zinc-50.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.shadow-highlight.w-full.px-3.py-1.border.rounded-sm.border-none.placeholder-gray-700.text-zinc-50.backdrop-blur-md(class="bg-gray-900/90" placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div.mb-2
                        label.text-center.block.text-sm.text-zinc-50.mb-2.font-bold(for="email") Email de registro
                        input#email.shadow-highlight.w-full.px-3.py-1.border.rounded-sm.border-none.placeholder-gray-700.text-zinc-50.backdrop-blur-md(class="bg-gray-900/90" placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')
                    div.mb-2
                        label.text-center.block.text-sm.text-zinc-50.mb-2.font-bold(for="passwod") Password
                        input#password.shadow-highlight.w-full.px-3.py-1.border.rounded-sm.border-none.placeholder-gray-700.text-zinc-50.backdrop-blur-md(class="bg-gray-900/90" placeholder="Tu password" type="password" name="password")
                    div.mb-2
                        label.text-center.block.text-sm.text-zinc-50.mb-2.font-bold(for="repetir_password") Repetir Password
                        input#repetir_password.shadow-highlight.w-full.px-3.py-1.border.rounded-sm.border-none.placeholder-gray-700.text-zinc-50.backdrop-blur-md(class="bg-gray-900/90" placeholder="Repite tu password" type="password" name="repetir_password")
                    input(class="w-full mt-6 bg-green-300 hover:bg-green-400 font-bold py-1.5 cursor-pointer rounded-sm" type="submit" value="Crear Cuenta")
                    div.flex.item-center.justify-between.mt-5.text-zinc-400.text-xs
                        a(href="/auth/login" class="hover:text-zinc-100") Â¿Ya tienes cuenta?, Inicia Sesion.
                        a(href="/auth/recuperar-password" class="hover:text-zinc-100") Recuperar Password.
